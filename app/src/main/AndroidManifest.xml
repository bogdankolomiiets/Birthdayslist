<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bogdan.birthdayslist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewBirthdayActivity"
            android:label="@string/title_activity_new_birthday"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AboutActivity"
            android:theme="@style/Theme.MaterialComponents.Light.Dialog.Alert" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EditBirthdayActivity"
            android:label="Edit"
            android:theme="@style/AppTheme" />

        <service
            android:name=".BirthdayService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>