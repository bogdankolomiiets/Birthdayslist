<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ReminderRadioButtonStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/size_18sp</item>
        <item name="android:textColor">@color/colorCocoaBeanOpacity50</item>
    </style>

    <style name="ButtonsStyle">
        <item name="android:textSize">@dimen/size_18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/ok_btn_background</item>
        <item name="android:padding">@dimen/value_16dp</item>
    </style>

    <style name="TextViewTitleStyle">
        <item name="android:textSize">@dimen/size_18sp</item>
        <item name="android:textColor">@color/colorCocoaBean</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextSubTitleStyle">
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorCocoaBean</item>
    </style>

    <style name="NoEventsMessageStyle">
        <item name="android:textColor">@color/colorHibiscusOpacity80</item>
        <item name="android:textSize">@dimen/size_24sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="event_notification_buttons_style">
        <item name="android:padding">@dimen/value_16dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>
