<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="@dimen/value_8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/roboto_black"
            android:padding="@dimen/value_4dp"
            android:textColor="@color/colorWaikawaGray"
            android:textSize="@dimen/size_20sp"
            tools:text="Bohdan Kolomiiets" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/cellphone_android"
            android:drawablePadding="@dimen/value_4dp"
            android:fontFamily="@font/roboto_medium"
            android:padding="@dimen/value_4dp"
            android:textColor="@color/colorWaikawaGrayOpacity50"
            android:textSize="@dimen/size_18sp"
            tools:text="+380683111845" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:padding="@dimen/value_4dp"
            android:textColor="@color/colorWaikawaGrayOpacity50"
            android:textSize="18sp"
            tools:text="@string/birthday" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/type"
            android:layout_alignBottom="@id/type"
            android:layout_toEndOf="@+id/type"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:paddingTop="@dimen/value_4dp"
            android:paddingBottom="@dimen/value_4dp"
            android:textColor="@color/colorWaikawaGrayOpacity50"
            android:textSize="18sp"
            tools:text="11.09.1985" />

        <LinearLayout
            android:id="@+id/age_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/type"
            android:layout_alignBottom="@id/type"
            android:layout_toEndOf="@id/date"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/age_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:padding="@dimen/value_4dp"
                android:text="@string/age"
                android:textColor="@color/colorWaikawaGrayOpacity50"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/colorHibiscusOpacity80"
                android:textSize="@dimen/size_24sp"
                tools:text="34" />
        </LinearLayout>


        <TextView
            android:id="@+id/vertical_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_more_vert" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>